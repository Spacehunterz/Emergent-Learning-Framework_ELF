# ============================================================================
# Security Configuration
# ============================================================================

# Session encryption key - REQUIRED
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_ENCRYPTION_KEY=your-key-here

# Development mode access token - REQUIRED when using mock GitHub config
# Generate with: openssl rand -hex 32
DEV_ACCESS_TOKEN=your-dev-token-here

# Session cookie settings
SESSION_DOMAIN=localhost

# Environment
ENVIRONMENT=development

# ============================================================================
# GitHub OAuth Configuration
# ============================================================================

# Leave unset or set to "mock" to use development mode without GitHub credentials
# GITHUB_CLIENT_ID=your-client-id
# GITHUB_CLIENT_SECRET=your-client-secret

# ============================================================================
# Redis Configuration (Optional)
# ============================================================================

# Leave unset to use in-memory session storage
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ============================================================================
# Frontend Configuration
# ============================================================================

# FRONTEND_URL=https://app.yourdomain.com  # Production only
